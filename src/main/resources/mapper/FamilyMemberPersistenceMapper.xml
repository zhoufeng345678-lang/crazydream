<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.crazydream.infrastructure.persistence.mapper.FamilyMemberPersistenceMapper">

    <resultMap id="BaseResultMap" type="com.crazydream.infrastructure.persistence.po.FamilyMemberPO">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="name" column="name"/>
        <result property="relationType" column="relation_type"/>
        <result property="birthday" column="birthday"/>
        <result property="phone" column="phone"/>
        <result property="avatar" column="avatar"/>
        <result property="notes" column="notes"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <insert id="insert" parameterType="com.crazydream.infrastructure.persistence.po.FamilyMemberPO"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO family_member (
            user_id, name, relation_type, birthday, phone, avatar, notes, create_time, update_time
        ) VALUES (
            #{userId}, #{name}, #{relationType}, #{birthday}, #{phone}, #{avatar}, #{notes}, #{createTime}, #{updateTime}
        )
    </insert>

    <update id="updateById" parameterType="com.crazydream.infrastructure.persistence.po.FamilyMemberPO">
        UPDATE family_member
        SET name = #{name},
            relation_type = #{relationType},
            birthday = #{birthday},
            phone = #{phone},
            avatar = #{avatar},
            notes = #{notes},
            update_time = #{updateTime}
        WHERE id = #{id}
    </update>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM family_member WHERE id = #{id}
    </select>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT * FROM family_member 
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
    </select>

    <delete id="deleteById">
        DELETE FROM family_member WHERE id = #{id}
    </delete>

    <select id="countById" resultType="int">
        SELECT COUNT(*) FROM family_member WHERE id = #{id}
    </select>

    <select id="selectAllWithBirthday" resultMap="BaseResultMap">
        SELECT * FROM family_member 
        WHERE birthday IS NOT NULL
        ORDER BY user_id, id
    </select>

</mapper>
